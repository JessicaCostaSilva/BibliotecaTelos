-- Empréstimos de exemplo
EXEC dbo.RegisterLoan @book_id = 1, @user_id = 1; -- 1984 para Ana
EXEC dbo.RegisterLoan @book_id = 3, @user_id = 2; -- Clean Code para Bruno

-- Devolução de exemplo
DECLARE @loan1984 INT = (SELECT TOP 1 loan_id FROM dbo.Loans WHERE book_id = 1 AND user_id = 1 ORDER BY loan_id DESC);
EXEC dbo.RegisterReturn @loan_id = @loan1984;
